  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2016",
    "module": "esnext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node"
